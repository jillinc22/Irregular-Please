    <div class="content-wrapper">
        <div class="container-fluid">
        <!-- Example DataTables Card-->
        <div class="card mb-3">
            <div class="card-header">
            <i class="fa fa-list-ul"></i> List of Students</div>
            <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                    <th>Student ID</th>
                    <th>Student No.</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Password</th>
                    <th>Email Address</th>
                    <th>Address</th>
                    <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                    <th>Student ID</th>
                    <th>Student No.</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Password</th>
                    <th>Email Address</th>
                    <th>Address</th>
                    <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody>
                each stud in tbl_students
                    <tr>
                    <td>
                        value=stud.int_userID
                    </td>
                    <td>
                        value=stud.char_userStudNo
                    </td>
                    <td>
                        value=stud.varchar_userFName
                    </td>
                    <td>
                        value=stud.varchar_userLName
                    </td>
                    <td>
                        value=stud.varchar_userPassword
                    </td>
                    <td>
                        value=stud.varchar_userEmailAdd
                    </td>
                    <td>    
                        value=stud.varchar_userAddress
                    </td>
                    <td>
                        a(href=`/admin/${stud.int_userID}/editstudent` id="editstud"): span.fa.fa-edit Edit
                    </td>
                    </tr>
                </tbody>
                </table>
            </div>
            </div>
        </div>
        </div>
