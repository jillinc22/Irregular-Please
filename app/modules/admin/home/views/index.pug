extends ./navbar.pug

block content
    link(rel="stylesheet" href="/stylesheets/adminhome.css")
    <div class="modal-body row">

        //- ACCOUNT DETAILS
        <div class="col-md-3"> 
        <h3> Account/s Details:</h3>
        each stud in view_student
            <div class="container">
            h4  
                value=stud.char_userStudNo
            h5
                value=stud.varchar_userLName +", "
                small
                    value=stud.varchar_userFName
                </br>
            p
                value=stud.varchar_userAddress
                </br>
                value=stud.varchar_userEmailAdd
            <div id="IdFooter" class="panel-footer text-right">
            <ul class="social-network social-circle">
                <li><u>Edit</u> &nbsp<a href="#" class="edit" title="Edit" data-toggle="modal" data-target="#myModal"><i class="fa fa-pencil"></i></a></li>
            </ul>
            </div>
            </div>
            </br>
        </div>

           //- LISTS OF STUDENTS
        <div class="col-md-9">
            h3 Lists of Students:
            </br>
            <div class="container">
                <table class="table table-hover table-sm clickable-row" id="liststudent" method="GET" action="admin/viewstudent" >
                <thead>
                    <tr>
                    <th>Student ID</th>
                    <th>Student Number</th>
                    <th>Last Name</th>
                    <th>First Name</th>
                    //- <th>Email Address</th>
                    //- <th>Address</th>
                    <th>Profile</th>
                    </tr>
                </thead>
                <tbody>
                each user in tbl_students
                        <tr>
                        td=user.int_userID
                        td=user.char_userStudNo
                        td=user.varchar_userLName
                        td=user.varchar_userFName
                        //- td=user.varchar_userEmailAdd
                        //- td=user.varchar_userAddress
                        td
                            | &nbsp; 
                            a(href=`/admin/${user.int_userID}/viewstudent` class="buttonviewadmin"): span.fa.fa-user.fa-lg
                        </tr>

               
            </table >
            </div>
            //- script.
            //-             jQuery(document).ready(function($) {
            //-             $(".clickable-row").click(function() {
            //-             window.location = $(this).data("href-data");});
            //-             });

            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title" id="lineModalLabel">Edit Profile:</h3>
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
                    </div>
                    <div class="modal-body">
    
                        <form method="POST" action="profile/editprofile">
                        <div class="row">
                        <div class="form-group col-6">
                           <label for="editfname">First Name</label>
                            input(type="text" class="form-control" id="editfname" placeholder="First Name" value=`${view_student.varchar_userFName}` name="user_fname")
                        </div>
                        <div class="form-group col-6">
                            <label for="editlname">Last Name</label>
                            input(type="text" class="form-control" id="editlname" placeholder="Last Name" value=`${view_student.varchar_userLName}` name="user_lname")
                        </div>
                        </div>
                        <div class="form-group">
                            <label for="editemail">Email Address</label>
                            input(type="email" class="form-control" id="editemail" placeholder="Enter email" value=`${view_student.varchar_userEmailAdd}` name="user_email")
                        </div>
                        <label for="editpass">Password</label>
                        <div class="row">
                        <div class="form-group col-9">
                            input(type="password" class="form-control" id="editpass" placeholder="Password" value=`${view_student.varchar_userPassword}` name="user_password")
                        </div>
                        <div class="form-group col-1">
                            <button type="button" id="eye" onclick="if(user_password.type=='text')password.type='password'; else user_password.type='text';"><i class="fa fa-eye" aria-hidden="true"></i>
                        </button>
                        </div>
                        </div>
                        <div class="form-group">
                            <label for="editaddress">Address</label>
                            input(type="text" class="form-control" id="editaddress" placeholder="Address" value=`${view_student.varchar_userAddress}` name="user_address")
                        </div>
                        <hr>
                        <button type="submit" class="btn btn-default float-right" id="buttoneditprofile">Submit</button>
                    
                        </form>
                    </div>
                </div>