extends ../../home/views/navbar.pug

block content

    <div class="content-wrapper">
        <div class="container-fluid">
        <!-- Example DataTables Card-->
        <div class="card mb-3">
            <div class="card-header">
            <i class="fa fa-table"></i> List of Petitions(made by students)</div>
            <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                    <th>Petition ID</th>
                    <th>Subject Code</th>
                    <th>Subject Name</th>
                    <th>No. of Members</th>
                    <th>Status</th>
                    <th>Time</th>
                    <th>Days</th>
                    <th>Created by</th>
                    <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                    <th>Petition ID</th>
                    <th>Subject Code</th>
                    <th>Subject Name</th>
                    <th>No. of Members</th>
                    <th>Status</th>
                    <th>Time</th>
                    <th>Days</th>
                    <th>Created by</th>
                    <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody>
                each petition in tbl_petition
                    <tr>
                    <td>
                        value=petition.int_petitID
                    </td>
                    <td>
                        value=petition.char_subjCode
                    </td>
                    <td>
                        value=petition.varchar_courseName
                    </td>
                    <td>
                        value=petition.int_petitMemb
                    </td>
                    <td>
                        value=petition.varchar_petitStatus
                    </td>
                    <td>    
                        value=petition.varchar_petitTime
                    </td>
                    <td>    
                        value=petition.varchar_petitDays
                    </td>
                    <td>    
                        value=petition.varchar_userEmailAdd
                    </td>
                    <td>
                        a(href=`/admin/petition/${petition.int_petitID}/editpetit` id="editpetit"): span.fa.fa-edit Edit
                    </td>
                    </tr>
                </tbody>
                </table>
            </div>
            </div>
        </div>
        </div>
        <!-- /.container-fluid-->
        <!-- /.content-wrapper-->
